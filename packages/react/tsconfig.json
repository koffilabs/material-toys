{
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": "src",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "test-utils": ["./utils/test-utils"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}