{
  "compilerOptions": {
    "baseUrl": "src",
    "types": ["jest", "node"],
    "paths": {
      "test-utils": ["./utils/test-utils"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}